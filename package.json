{
  "name": "tienda-ropa-pw1",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seeders.js",
    "frontend:dev": "cd frontend && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "build": "npm run frontend:build",
    "frontend:build": "cd frontend && npm run build",
    "postinstall": "cd frontend && npm install && npm run build",
    "build:frontend": "npm --prefix frontend run build"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
